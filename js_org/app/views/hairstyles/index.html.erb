<h1>Listing hairstyles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hairstyles.each do |hairstyle| %>
      <tr>
        <td><%= hairstyle.name %></td>
        <td><%= hairstyle.description %></td>
        <td><%= link_to 'Show', hairstyle %></td>
        <td><%= link_to 'Edit', edit_hairstyle_path(hairstyle) %></td>
        <td><%= link_to 'Destroy', hairstyle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hairstyle', new_hairstyle_path %>
